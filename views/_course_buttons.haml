%div{:class=>"btn-group btn-group-sm", :role=>'group'}
  - if auth_to("course_edit") or course_belongs_to(course.id, session['user_id'])
    %a{:role=>:button, :href=>url("/course/#{course.id}/edit"), :class=>"btn btn-default"}
      %span{:class=>"glyphicon glyphicon-pencil"}
      =t(:Edit)
  - if auth_to("assessment_view") or course_belongs_to(course.id, session['user_id'])
    %a{:role=>:button, :href=>url("/course/#{course.id}/assessments"), :class=>"btn btn-default"}
      %span{:class=>"glyphicon glyphicon-king"}
      =t(:Assessments)
  - if auth_to("course_admin") or course_belongs_to(course.id, session['user_id'])
    %a{:role=>:button, :href=>url("/course/#{course.id}/delete"), :class=>"btn btn-danger"}
      %span.glyphicon.glyphicon-trash
      =t(:Delete)